@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        @if (this.User.Identity.IsAuthenticated)
        {
    <li data-target="#myCarousel" data-slide-to="3"></li> 
        }
        </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/MAVBanner.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        @if (this.User.Identity.IsAuthenticated)
        {
            <div class="item">
                <img src="~/images/mavbanner2.png" alt="Visual Studio" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    @if (this.User.IsInRole("Intern"))
                    {<p style="color: black">

                            Perform the audiovisual material loan process
                        </p>
                    }
                    else if (this.User.IsInRole("Applicant"))
                    {
                        <p style="color: black">Check all your loans</p>
                    }
                    else
                    {
                        <p style="color: black">View all loans</p>
                    }<p>

                        <a class="btn btn-default" href='/Loans'>
                            Loans
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/mavbanner6.png" alt="Visual Studio" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p style="color: black">

                            View the full list of materials
                        </p>
                   <p>

                        <a class="btn btn-default" href='/Materials'>
                            Go to list
                        </a>
                    </p>
                </div>
            </div>
        }
        else
        {
            <div class="item">
                <img src="~/images/mavbanner3.png" alt="Visual Studio" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p style="color: black">

                        Log in to access the audiovisual material loan process
                    <p>
                        <a class="btn btn-default" href="/Account/Login">
                            Log In
                        </a>
                    </p>
                    </p>
                </div>
            </div>
        }
        <div class="item">
            <div class="carousel-caption" role="option">
                <p style="color: black; background-color: #b5e1e4">

                    Take a look at the handbooks specially designed for handling audiovisual material
                <p>
                    <a class="btn btn-default" href='/Handbooks'>
                        Go to Handbooks
                    </a>
                </p>
                </p>
            </div>
            <img src="~/images/mavbanner4.png" alt="Microsoft Azure" class="img-responsive" />
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

