@model DSPA_MeAudVis.Web.Models.ApplicantViewModel

@{
    ViewData["Title"] = "Edit Applicant";
}

<h2>Edit Applicant</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="User.UserName" />
            <input type="hidden" asp-for="Type" />
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="UserUserName" class="control-label"></label>
                    <input readonly="readonly" asp-for="UserUserName" class="form-control">
                    <span asp-validation-for="UserUserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.FullName" class="control-label"></label>
                    <input readonly="readonly" asp-for="User.FullName" class="form-control">
                    <span asp-validation-for="User.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TypeId" class="control-label"></label>
                    <select asp-for="TypeId" asp-items="Model.Types" class="form-control"></select>
                    <span asp-validation-for="TypeId" class="text-danger"></span>
                </div>
                <div class="checkbox">
                    <label>
                        <input asp-for="Debtor" /> @Html.DisplayNameFor(model => model.Debtor)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary"> <span class="glyphicon glyphicon-arrow-left"></span></a>
                <button type="submit" value="Save" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span></button>
            </div>

            
        </form>
    </div>
</div>
