@model DSPA_MeAudVis.Web.Models.ApplicantViewModel

@{
    ViewData["Title"] = "Create Applicant";
}

<h2>Create Applicant</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="UserUserName" class="control-label"></label>
                    <select asp-for="UserUserName" asp-items="Model.Users" class="form-control"> </select>
                    <span asp-validation-for="UserUserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TypeId" class="control-label"></label>
                    <select asp-for="TypeId" asp-items="Model.Types" class="form-control"></select>
                    <span asp-validation-for="TypeId" class="text-danger"></span>
                </div>
                <div class="checkbox">
                    <label>
                        <input asp-for="Debtor" /> @Html.DisplayNameFor(model => model.Debtor)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary"> <span class="glyphicon glyphicon-arrow-left"></span></a>
                <button type="submit" class="btn btn-success"> <span class="glyphicon glyphicon-plus"></span> </button>
            </div>
        </form>
    </div>
</div>
