@model IEnumerable<DSPA_MeAudVis.Web.Data.Entities.LoanDetail>

@{
    ViewData["Title"] = "Loan Details' List";
}

<h2>Loan Details' List</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Material)
            </th>
            <th>
                Status
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeIn)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Observations)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Material.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.StatusName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTimeOut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTimeIn)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Observations)
                </td>
                <td>
                    @if (this.User.IsInRole("Intern"))
                    {
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><span class="glyphicon glyphicon-eye-open"></span></a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span></a>
                    }
                    @if (this.User.IsInRole("Owner"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
